<h1>Questions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Question ID</th>
      <th>Question</th>
      <th>Submitted By</th>
      <th>Responses Submitted</th>
    </tr>
  </thead>

  <tbody>
    <% if @questions %>
      <% @questions.each do |q| %>
        <tr>
          <td><%= link_to q.id, question_path(q.id) %></td>
          <td><%= q.question_text %></td>
          <td><%= q.user.email %></td>
          <td><%= q.responses.count %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Question', new_question_path, class: "btn btn-success" %>